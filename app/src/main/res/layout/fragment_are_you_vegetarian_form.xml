<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:flatui="http://schemas.android.com/apk/res-auto"
    android:background="@color/appBGcolor"
    android:padding="@dimen/activity_horizontal_margin"
    tools:context="com.example.madooding.healthpy.AreYouVegetarianFormFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="คุณบริโภคอาหารมังสวิรัติใช่หรือไม่ ?"
            android:layout_marginBottom="8dp"
            style="@style/InformationGatheringHeadingText"/>

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:orientation="vertical">
            <com.cengalabs.flatui.views.FlatRadioButton
                android:id="@+id/information_gathering_vegetarian"
                android:textSize="26sp"
                android:text="ใช่"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                flatui:fl_size="14dp"
                flatui:fl_theme="@array/information_gathering_element"/>
            <com.cengalabs.flatui.views.FlatRadioButton
                android:id="@+id/information_gathering_not_vegetarian"
                android:textSize="26sp"
                android:text="ไม่ใช่"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                flatui:fl_size="14dp"
                flatui:fl_theme="@array/information_gathering_element"/>
        </RadioGroup>

    </LinearLayout>
</FrameLayout>
