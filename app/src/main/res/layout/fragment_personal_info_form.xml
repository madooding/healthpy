<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:flatui="http://schemas.android.com/apk/res-auto"
    android:background="@color/appBGcolor"
    android:padding="@dimen/activity_horizontal_margin"
    tools:context="com.example.madooding.healthpy.PersonalInfoFormFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ชื่อ"
            android:layout_marginBottom="4dp"
            style="@style/InformationGatheringHeadingText"/>
        <com.cengalabs.flatui.views.FlatEditText
            android:id="@+id/information_gathering_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textSize="26sp"
            android:padding="12dp"
            flatui:fl_theme="@array/information_gathering_edittext"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="นามสกุล"
            android:layout_marginBottom="4dp"
            style="@style/InformationGatheringHeadingText"/>
        <com.cengalabs.flatui.views.FlatEditText
            android:id="@+id/information_gathering_lastname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textSize="26sp"
            android:padding="12dp"
            flatui:fl_theme="@array/information_gathering_edittext"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="E-Mail"
            android:layout_marginBottom="4dp"
            style="@style/InformationGatheringHeadingText"/>
        <com.cengalabs.flatui.views.FlatEditText
            android:id="@+id/information_gathering_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textSize="26sp"
            android:padding="12dp"
            flatui:fl_theme="@array/information_gathering_edittext"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="วันเกิด"
            android:layout_marginBottom="4dp"
            style="@style/InformationGatheringHeadingText"/>
        <com.cengalabs.flatui.views.FlatEditText
            android:id="@+id/information_gathering_birthday"
            android:drawableRight="@drawable/calendar_small"
            android:drawableTint="@color/colorSubStandardGrey"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textSize="26sp"
            android:padding="12dp"
            flatui:fl_theme="@array/information_gathering_edittext"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".475"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="น้ำหนัก"
                    android:layout_marginBottom="4dp"
                    style="@style/InformationGatheringHeadingText"/>
                <com.cengalabs.flatui.views.FlatEditText
                    android:id="@+id/information_gathering_weight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:textSize="26sp"
                    android:padding="12dp"
                    flatui:fl_theme="@array/information_gathering_edittext"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".05">
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".475"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="ส่วนสูง"
                    android:layout_marginBottom="4dp"
                    style="@style/InformationGatheringHeadingText"/>
                <com.cengalabs.flatui.views.FlatEditText
                    android:id="@+id/information_gathering_height"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:textSize="26sp"
                    android:padding="12dp"
                    flatui:fl_theme="@array/information_gathering_edittext"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</FrameLayout>
